@model IEnumerable<Treeview_2.Models.Division>

@{
    ViewBag.Title = "Index";
    int id = 0;
    var urlId = Url.RequestContext.RouteData.Values["id"] != null ? Url.RequestContext.RouteData.Values["id"].ToString() : "";
    int.TryParse(urlId, out id);
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Division", "Create", "Division", new { id = id }, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Base.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Base.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
            @Html.ActionLink("Districts", "DistrictsByDivision","Division", new { id = item.Id },null)
        </td>
    </tr>
}

</table>
