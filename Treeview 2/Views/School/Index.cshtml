@model IEnumerable<Treeview_2.Models.School>

@{
    ViewBag.Title = "Index";
    int id = 0;
    var urlId = Url.RequestContext.RouteData.Values["id"] != null ? Url.RequestContext.RouteData.Values["id"].ToString() : "";
    int.TryParse(urlId, out id);
}

<h2>Index</h2>

<p>
   @Html.ActionLink("Create New School", "Create", "School", new { id = id }, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Village.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Village.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Results", "School", "Result", new { SchoolId = item.Id },null)
        </td>
    </tr>
}

</table>
