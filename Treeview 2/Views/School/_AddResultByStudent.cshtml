
@model Treeview_2.Models.AddResultByStudent

<div class="row">
    <table class="table table-striped">
        <tr>
            <th>Student Name</th>
            <th>Grade</th>
            <th>Achieved Mark(%)</th>
        </tr>
        @if (Model != null && Model.Subjects != null && Model.Subjects.Count() > 0)
        {
            for (int i = 0; i < Model.Subjects.Count(); i++)
            {
                <tr>
                    <td>
                        @Model.Subjects[i].Name
                    </td>
                    <td>
                        <input type="text" name="Grade_@Model.Subjects[i].Id" class="form-control" />
                    </td>
                    <td>
                        <input type="number" name="Mark_@Model.Subjects[i].Id" class="form-control"  step="any"/>
                    </td>
                </tr>
            }

        }
        else
        {
            <tr>
                <td rowspan="3">No Subject found.</td>
            </tr>
        }
    </table>
    <input type="submit" value="Save" class="btn btn-primary pull-right" />
</div>